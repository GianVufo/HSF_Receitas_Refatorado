@model Receituario;
@using Hsf_Receitas.Models;

@{
    ViewData["title"] = "Gerar Receituário";
}

<div class="prescription container-fluid">

    <div class="card border-primary col-md-5 mb-4 p-0">

        <div class="card-header text-light">

            <h1 class="text-center">Receituário</h1>

        </div>

        <div class="card-body">

            <form id="receita-form" class="prescription-form">

                <span class="mt-3 mb-3 alerta" ></span>

                <div class="card text-light border-primary">

                    <h5 class="card-header font-weight-bold">Informações básicas :</h5>

                    <div class="card-body prescription-card-body">

                        <input id="prescriptionId" class="form-control mb-3" type="hidden" asp-for="Id" disabled>

                        <label class="text-primary" for="pacientName">Nome do Paciente: </label>
                        <input placeholder="Ex: Márcio de Assis Cardoso" type="text" id="pacientName" class="form-control line-inputs s-pacientName border-primary mt-0 mb-3" asp-for="PacientName" onblur="ShowPrescriptionPacient()" onkeyup="ShowPrescriptionPacient()" required>

                        <label class="text-primary" for="doctorName">Nome do Médico: </label>
                        <input placeholder="Ex: Dr. Adriano Rocha" type="text" id="doctorName" class="form-control line-inputs s-doctorName border-primary mt-0 mb-3" asp-for="DoctorName" onblur="ShowPrescriptionMedic()" onkeyup="ShowPrescriptionMedic()" required>

                        <label class="text-primary" for="dataAppoiment">Data da consulta: </label>
                        <input type="date" id="dataAppoiment" class="form-control line-inputs s-dataAppoiment border-primary mt-0 mb-4" asp-for="DateOfMedicalAppoiment" onblur="ShowPrescriptionData()" required>

                        <div class="edit-button col-md-3">
                            <button type="submit" class="btn btn-sm btn-primary btn-printer mt-3"> <span class="material-symbols-outlined"> save </span> Salvar</button>
                        </div>

                    </div>

                </div>

                <div class="card text-light border-primary">

                    <h5 class="card-header font-weight-bold">Medicações :</h5>

                    <div class="card-body">

                        <p class="text-danger ml-3">Salve a receita para inserir medicamentos.</p>

                        <div class="row button-prescription">

                            <button type="button" title="Salve a receita para adicionar medicamentos." class="btn btn-sm btn-info btn-printer medic-btn" disabled>
                                
                            <span class="material-symbols-outlined"> syringe </span> Adicionar Medicamentos </button>

                            <button title="Salve a receita para imprimir." class="btn btn-sm btn-secondary btn-printer medic-btn" disabled><span class="material-symbols-outlined mr-2"> print </span> Imprimir </button>
                                
                        </div>

                    </div>

                </div>

            </form>

        </div>

    </div>

    <div class="card border-primary col-md-5 mb-4 p-0">
        @await Html.PartialAsync("/Views/Medicacao/_ShowMedication.cshtml", @Model)
    </div>

</div>