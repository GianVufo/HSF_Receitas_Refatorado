@model Receituario;
@using Hsf_Receitas.Models;

@{
    ViewData["title"] = "Gerar Receituário";
}

<div class="prescription container-fluid">

    <div class="card register-card border-primary col-md-5 mb-4 p-0">

        <div class="card-header text-light">

            <h1 class="text-center">Receituário</h1>

        </div>

        <div class="card-body">

            <div class="card border-primary">

                <div class="card-header text-light">
                    <h5 class="font-weight-bold mb-0">Informações básicas :</h5>
                </div>

                <div class="card-body prescription-card-body">

                    <form id="receita-form" class="prescription-form">

                        <span class="mt-3 mb-3 alerta" ></span>

                        <input id="prescriptionId" class="form-control mb-3" type="hidden" asp-for="Id" disabled>

                        <label class="text-primary" for="pacientName">Nome do Paciente: </label>
                        <input placeholder="Ex: Márcio de Assis Cardoso" maxlength="50" minlength="8" type="text" id="pacientName" class="form-control line-inputs s-pacientName border-primary mt-0 mb-3" asp-for="PacientName" onblur="ShowPrescriptionPacient()" onkeyup="ShowPrescriptionPacient()" required>

                        <label class="text-primary" for="doctorName">Nome do Médico: </label>
                        <input placeholder="Ex: Dr. Adriano Rocha" type="text"  maxlength="50" minlength="8" id="doctorName" class="form-control line-inputs s-doctorName border-primary mt-0 mb-3" asp-for="DoctorName" onblur="ShowPrescriptionMedic()" onkeyup="ShowPrescriptionMedic()" required>

                        <label class="text-primary" for="dataAppoiment">Data da consulta: </label>
                        <input type="date" id="dataAppoiment" class="form-control line-inputs s-dataAppoiment border-primary mt-0 mb-4" asp-for="DateOfMedicalAppoiment" onblur="ShowPrescriptionData()" required>

                        <button type="submit" aria-label="Salve a receita para inserir medicamentos !" class="btn btn-sm btn-primary send-button btn-printer mt-3"> <span id="save-icon" class="material-symbols-outlined"> save </span> </button>

                    </form>

                </div>

            </div> 

            <div class="card border-primary">

                <div class="card-header text-light">
                    <h5 class="font-weight-bold mb-0">Medicações :</h5>
                </div>

                <div class="card-body">

                    <div class="alert alert-danger w-100 text-center alert-medication mt-3 mb-4" role="alert">
                        Salve a receita para inserir medicamentos ! 
                    </div>

                    <div class="row button-prescription">

                        <button type="button" class="btn btn-sm btn-info btn-printer medic-btn" disabled> <span class="material-symbols-outlined"> syringe </span> Adicionar Medicamentos </button>

                        <button class="btn btn-sm btn-secondary btn-printer medic-btn" disabled><span class="material-symbols-outlined mr-2"> print </span> Imprimir </button>
                                
                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="card card-viewer border-primary col-md-5 mb-4 p-0">
        @await Html.PartialAsync("/Views/Medicacao/_ShowMedication.cshtml", @Model)
    </div>

</div>