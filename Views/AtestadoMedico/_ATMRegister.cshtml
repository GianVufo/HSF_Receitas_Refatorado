@model AtestadoMedico

@{
    ViewData["title"] = "Adicionar Atestado Médico";
}

<div class="col-md-12">

    <form id="atm-form" class="atm-form">

        <input id="atmId" class="form-control" value="@Model.Id" type="hidden" asp-for="Id" disabled>

        <input id="atm-receituarioId-medic" class="form-control" type="hidden" asp-for="Id" disabled>

        <span class="mt-3 mb-3 alerta"></span>

        <div class="row mt-4">

            <div class="col-md-12">

                <fieldset class="text-primary border-primary mb-3">

                    <legend>Nome do Paciente: </legend>

                    <label class="text-primary" for="atm-pacientName"></label>
                    <input type="text" id="atm-pacientName" class="form-control medicament-inputs border-primary m-0" asp-for="PacientName" required disabled>

                </fieldset>
                
            </div>

            <div class="col-md-12">

                <fieldset class="text-primary border-primary mb-3">

                    <legend>Unidade Médica: </legend>
                    <label class="text-primary" for="medicUnity"></label>
                    <input type="text" id="medicUnity" class="form-control medicament-inputs border-primary m-0" asp-for="MedicUnity" required>  
 
                </fieldset>

            </div>

            <div class="col-md-6">

                <fieldset class="text-primary border-primary mb-3">

                    <legend>Dias de repouso: </legend>
                    <label class="text-primary" for="restDays"></label>
                    <input type="number" id="restDays" class="form-control medicament-inputs border-primary m-0" asp-for="RestDays" required>

                </fieldset>

            </div>

            <div class="col-md-6">
                <fieldset class="text-primary border-primary mb-3">

                    <legend>CID: </legend>
                    <label class="text-primary" for="atm-cid"></label>
                    <input type="text" id="atm-cid" class="form-control medicament-inputs border-primary m-0" asp-for="CID" required>

                </fieldset>

            </div>

        </div>

        <div class="modal-footer m-0 p-0">
            <button type="submit" aria-label="Gerar atestado médico !" class="btn btn-primary att-send-button btn-printer"> <span id="att-save-icon" class="material-symbols-outlined"> save </span> </button>
        </div>

    </form>

</div>
