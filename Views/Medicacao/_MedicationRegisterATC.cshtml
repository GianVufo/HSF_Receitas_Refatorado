@model Medicacao;

@{
    ViewData["title"] = "Adicionar Medicamentos";
}

<div class="container medicament">

    <div class="medicamento">

        <form name="atc-medic-form" id="atc-medic-form" class="medicament-form">

            <!--<h1>Cadastrar Medicamentos</h1>-->

            <span class="alerta"></span>

            <input class="form-control mb-3" id="atc-medicationId" value="@Model.Id"
                type="hidden" asp-for="@Model.Id" disabled required>

            <input class="form-control mb-3" id="atc-receituarioId-medication" type="hidden"
                asp-for="@Model.ReceituarioId" disabled required>

            <label for="">Nome do Medicamento: </label>
            <input id="atc-medicationName" class="form-control mb-3"
                asp-for="@Model.MedicationName"
                type="text" required>

            <label for="">Dosagem do Medicamento: </label>
            <input id="atc-medicationDosage" class="form-control mb-3"
                asp-for="@Model.MedicationDosage"
                type="text" required>

            <label asp-for="MedicationMethodUse" for="MedicationMethodUse"> Tipo
                de uso do medicamento: </label>
            <select class="custom-select mb-3 d-block w-100"
                asp-for="MedicationMethodUse" for="MedicationMethodUse"
                id="atc-medicationUse" required>

                <option value="">Selecionar...</option>
                <option asp-for="MedicationMethodUse" for="MedicationMethodUse"
                    value="Oral">Oral</option>
                <option asp-for="MedicationMethodUse" for="MedicationMethodUse"
                    value="Intravenosa">Intravenosa</option>
                <option asp-for="MedicationMethodUse" for="MedicationMethodUse"
                    value="Nasal">Nasal</option>
                <option asp-for="MedicationMethodUse" for="MedicationMethodUse"
                    value="Tópica">Tópica</option>

            </select>

            <label for="">Tempo de uso (Dias): </label>
            <input id="atc-useTime" class="form-control mb-3"
                asp-for="@Model.UseTime"
                type="number" required>

            <label for="">Dose a cada (Hrs): </label>
            <input id="atc-doseTime" class="form-control mb-3"
                asp-for="@Model.DoseTime"
                type="number" required>

            <button type="submit" class="btn btn-md btn-primary mt-3">Adicionar</button>
        </form>

    </div>

</div>